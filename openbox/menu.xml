<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-accessories-menu" label="Applications">
  <item label="Qalculate">
    <action name="Execute">
      <command>qalculate-gtk</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Thunderbird">
    <action name="Execute">
      <command>thunderbird</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="GitKraken">
    <action name="Execute">
      <command>gitkraken</command>
    </action>
  </item>
</menu>

<menu id="apps-editors-menu" label="Editors">
  <item label="VSCode">
    <action name="Execute">
      <command>code</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Sublime Text 3">
    <action name="Execute">
      <command>subl3</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="TexStudio">
  	<action name="Execute">
  		<command>texstudio</command>
  		<startupnotify>
        	<enabled>yes</enabled>
      </startupnotify>
  	</action>
  </item>
  <item label="Boostnote">
    <action name="Execute">
      <command>boostnote</command>
      <startupnotify>
          <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

