    </action>
  </item>
</menu>

 <menu id="display-configuration" label="Display">
    <item label="Laptop Only">
      <action name="Execute">
        <command>/home/russell/.screenlayout/single_home.sh</command>
      </action>
    </item>
    <item label="Dual Screen (H)">
      <action name="Execute">
        <command>/home/russell/.screenlayout/desk_home.sh</command>
      </action>
    </item>
    <item label="Dual Screen (V)">
      <action name="Execute">
        <command>/home/russell/.screenlayout/dual_vertical.sh</command>
      </action>
    </item>
  </menu>

<menu id="system-menu" label="System">
  <item label="Openbox Configuration Manager">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify>
      	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Open Openbox folder in Sublime">
    <action name="Execute">
      <command>subl3 ~/.config/openbox/</command>
    </action>
  </item>
  <item label="LxAppearance Configuration Manager">
    <action name="Execute">
      <command>lxappearance</command>
      <startupnotify>
      	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Tint2 Configuration Manager">
    <action name="Execute">
      <command>tint2conf</command>
      <startupnotify>
      	<enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

