<menu id="apps-multimedia-menu" label="Multimedia">
  <item label="NCMP++">
    <action name="Execute">
      <command>termite -e ncmpcpp</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="VLC">
    <action name="Execute">
      <command>vlc</command>
